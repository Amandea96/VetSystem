@model VetSystemEngineer.ViewModels.CreatePatientVisit
    @{
        ViewData["Title"] = "Pierwsza wizyta - stwórz pacjenta wraz z właścicielem";
        Layout = "_Layout";
    }


    <div class="box-cont m-lg-5" >
        <div class="special" style="padding-top:6rem">
            <span class="fas icon fa-cat"></span>
            <h1 class="pb-5">@ViewData["Title"]</h1>



            <div style=" display: block; text-align: center;" class="pl-5 pr-5">
               
                <form asp-action="CreatePatientVisit" method="post">

                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="vl"></div>
                    <div class="row" style="padding-bottom:5rem">

                        <div class="col-md-6 col-12 pl-5 pr-5 ">


                            <div class="form-group">
                                <label asp-for="NameOwner">Imię</label>
                                <input asp-for="NameOwner" class="form-control">
                                <span asp-validation-for="NameOwner" class="text-danger"></span>
                            </div>
                            <div class="form-group ">
                                <label asp-for="Surname">Nazwisko</label>
                                <input asp-for="Surname" class="form-control">
                                <span asp-validation-for="Surname" class="text-danger"></span>
                            </div>





                            <div class="form-group ">
                                <label asp-for="Email">Email</label>
                                <input asp-for="Email" class="form-control">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password">Hasło</label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword">Powtórz hasło</label>
                                <input asp-for="ConfirmPassword" class="form-control" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PhoneNumber">Nr tel</label>
                                <input asp-for="PhoneNumber" class="form-control">
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Address">Adres</label>
                                <input asp-for="Address" class="form-control">
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>







                        </div>


                        <div class="col-md-6  col-12 pl-5 pr-5">
                            <div class="form-group">
                                <label asp-for="NamePet">Imię zwierzęcia</label>
                                <input asp-for="NamePet" class="form-control">
                                <span asp-validation-for="NamePet" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Sex">Płeć</label>
                                <select class="selectpicker form-control" data-style="btn btn-outline-primary " asp-for="Sex">
                                    <option value="Samiec">Samiec</option>
                                    <option value="Samica">Samica</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label asp-for="Age">Data urodzenia</label>
                                <input asp-for="Age" asp-format="{0:dd/MM/yyyy}" class="form-control">
                                <span asp-validation-for="Age" class="text-danger"></span>
                            </div>


                            <div class=" form-group">
                                <label>Typ zwierzęcia</label>
                                <select class="selectpicker form-control" data-live-search="true" data-size="7" data-style="btn btn-outline-primary" asp-for="SelectedType" asp-items=@Model.ListType>
                                </select>
                            </div>

                            <div class="form-group">
                                <label asp-for="Breed">Rasa</label>
                                <input asp-for="Breed" class="form-control">
                                <span asp-validation-for="Breed" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Weight">Waga</label>
                                <input asp-for="Weight" class="form-control">
                                <span asp-validation-for="Weight" class="text-danger"></span>
                            </div>

                            <div class="form-group ">
                                <label>Sterylizacja/kastracja</label>
                                <select class="form-control selectpicker" data-style="btn btn-outline-primary" asp-for="SterilizedCastration" asp-items="Model.SterilizedCastrationList"></select>

                            </div>

                        </div>
                    </div>
                    <div class=" v2 pl-5 pr-5"></div>
                    <div class="row mt-5">
                        <div class="col-md-6 col-12 pl-5 pr-5">
                            <div class="form-group">
                                <label asp-for="Purpose">Powód przyjęcia</label>
                                <textarea class="form-control" asp-for="Purpose" rows="5"></textarea>
                                <span asp-validation-for="Purpose" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6  col-12 pl-5 pr-5 mb-5">
                            <div class="form-group">
                                <label asp-for="DecrDisActions">Czynności</label>
                                <textarea class="form-control" asp-for="DecrDisActions" rows="5"></textarea>
                                <span asp-validation-for="DecrDisActions" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn-lg btn-primary float-right mr-4">Dodaj pacjenta i wizytę</button>

                </form>

            </div>
        </div>
        </div>
