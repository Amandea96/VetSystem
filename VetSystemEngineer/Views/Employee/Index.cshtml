@model IEnumerable<VetSystemEngineer.Models.ApplicationUser>
@{
    ViewData["Title"] = "Lista pracowników";
    Layout = "_InstLayout";
    ViewBag.Wallpaper = "../images/Placówki.jpg";
    var i = 1;
}



<div class="box-cont">
    <div class="container-fluid  ">
        <div class="row">
            <a class="btn btn-primary btn-marg-b" asp-action="AddVet" asp-route-id="@ViewBag.idInst">Dodaj pracownika</a>
            <a class="btn btn-primary btn-marg-b" asp-action="ChangeDataInst" style="margin-left:0.5rem">Zmień dane placówki</a>
        </div>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Imię</th>
                        <th scope="col">Nazwisko</th>
                        <th scope="col">Tytuł</th>
                        <th scope="col">Nr Tel</th>
                        <th scope="col">Adres</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model)
                    {

                        <tr>

                            <th scope="row">@i</th>
                            <td> <a asp-controller="Institution" asp-action="Details" asp-route-id="@p.IdInst">@p.Name</a></td>
                            <td>@p.Surname</td>
                            <td>@p.Education</td>
                            <td>@p.PhoneNumber</td>
                            <td>
                                @p.Address
                            </td>

                        </tr>

                        i++;
                    }
                </tbody>
            </table>
        </div>
        @*<div page-model="@Model.PageViewModel" page-action="List" page-classes-enabled="true"
                 page-class="btn" page-class-normal="btn-secondary"
                 page-class-selected="btn-primary" class="btn-group pull-right m-1">
            </div>*@

    </div>
</div>






