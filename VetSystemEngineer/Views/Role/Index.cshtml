@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{Layout = "_Layout";
    ViewData["Title"] = "Index";
}
    <div class="box-cont  mx-1 mx-lg-5 mx-md-2 text-center">
        <div class="special" style="padding-top:6rem">
            <span class="icon fas fa-user-friends"></span>
            <h1>Lista ról</h1>
            
            <a class="btn-lg  btn-primary float-left " asp-action="Create">Dodaj rolę</a>
           
            <table class="table table-striped table-bordered pt-4">
                <thead>
                    <tr>
                        <td style="width:60%">Id</td>
                        <td style="width:40%">Nazwa</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td>@role.Id</td>
                            <td>@role.Name</td>
                        </tr>
                    }
                </tbody>
            </table>

           
            </div></div>