@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Zapomniałeś swojego hasła?";
}
    <div class="box-cont  mx-1 mx-lg-5 mx-md-2 text-center">
        <div class="special" style="padding-top:6rem">
            <span class="far icon fa-file-alt"></span>
            <h1>@ViewData["Title"]</h1>


            <h4>Wpisz poniżej adres email, a system wyśle na niego link uprawniający do zmiany hasła.</h4>


            <div class="row">
                <div class="col-md-4 offset-md-4">
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Wyślij</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }
